<odoo>
    <record id="view_hr_leave_approval_flow_list" model="ir.ui.view">
        <field name="name">hr.leave.approval.flow.list</field>
        <field name="model">hr.leave.approval.flow</field>
        <field name="arch" type="xml">
            <list>
                <field name="leave_type_id"/>
                <field name="sequence"/>
                <field name="mode"/>
            </list>
        </field>
    </record>

    <record id="view_hr_leave_approval_flow_form" model="ir.ui.view">
        <field name="name">hr.leave.approval.flow.form</field>
        <field name="model">hr.leave.approval.flow</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="leave_type_id"/>
                    <field name="sequence"/>
                    <field name="mode"/>
                    <field name="approver_line_ids">
                        <list editable="bottom">
                            <field name="sequence"/>
                            <field name="user_id"/>
                            <field name="sequence_type" required="1"/>
                        </list>
                    </field>
                    <!-- Backward compatibility (legacy field); keep hidden -->
                    <field name="approver_ids" invisible="1"/>
                </group>
            </form>
        </field>
    </record>
</odoo>

