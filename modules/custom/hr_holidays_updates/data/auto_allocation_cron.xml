<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ir_cron_auto_allocate_policy_leaves" model="ir.cron">
        <field name="name">Auto Allocate Policy Leaves (Monthly)</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave_allocation"/>
        <field name="state">code</field>
        <field name="code">model.cron_auto_allocate_policy_leaves()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>

    <!-- Backfill once on upgrade so balances appear immediately -->
    <function model="hr.leave.allocation" name="cron_auto_allocate_policy_leaves"/>
</odoo>

