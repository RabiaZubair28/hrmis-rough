<odoo>
    <record id="view_hr_leave_form_multi_approval" model="ir.ui.view">
        <field name="name">hr.leave.form.multi.approval</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">

            <!-- Replace approve button -->
            <xpath expr="//button[@name='action_approve']" position="replace">
                <button
                    name="action_open_approval_wizard"
                    type="object"
                    string="Approve"
                    class="btn-primary"
                    invisible="state != 'confirm' or uid not in pending_approver_ids"/>
            </xpath>

            <!-- Approval status block -->
            <xpath expr="//sheet" position="inside">
                <group string="Approval Status">
                    <field name="approval_step"/>
                    <field name="pending_approver_ids" invisible="1"/>

                    <field name="approval_status_ids">
                        <list>
                            <field name="sequence"/>
                            <field name="sequence_type"/>
                            <field name="user_id"/>
                            <field name="approved"/>
                            <field name="approved_on"/>
                            <field name="comment"/>
                            <field name="commented_on"/>
                        </list>
                    </field>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
