<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--
      Ensure "Manage Requests" is NOT present in the base HRMIS sidebar.
      This is intentionally in hr_holidays_updates so a module upgrade overwrites
      any previously-loaded QWeb template versions stored in the database.
    -->
    <template id="hrmis_ui_layout_hide_manage_requests" inherit_id="hr_holidays_updates.hrmis_ui_layout">
        <xpath expr="//nav[contains(@class,'hrmis-nav')]" position="replace">
            <nav class="hrmis-nav">
                <a t-attf-class="hrmis-nav__item #{'is-active' if active_menu == 'user_profile' else ''}"
                   t-att-href="current_employee and ('/hrmis/staff/%s' % current_employee.id) or '/hrmis/services'">
                    User profile
                </a>

                <a t-attf-class="hrmis-nav__item #{'is-active' if active_menu == 'staff' else ''}"
                   href="/hrmis/staff">
                    Search staff
                </a>

                <a class="hrmis-nav__item" href="#">Transfer requests</a>
                <a class="hrmis-nav__item" href="#">Disciplinary actions</a>

                <a t-attf-class="hrmis-nav__item #{'is-active' if active_menu == 'leave_requests' else ''}"
                   t-att-href="current_employee and ('/hrmis/staff/%s/leave?tab=new' % current_employee.id) or '/hrmis/services'">
                    Leave requests
                </a>
            </nav>
        </xpath>
    </template>
</odoo>

