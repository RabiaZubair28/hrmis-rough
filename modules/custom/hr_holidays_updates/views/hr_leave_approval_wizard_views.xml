<odoo>
    <record id="view_hr_leave_approval_wizard_form" model="ir.ui.view">
        <field name="name">hr.leave.approval.wizard.form</field>
        <field name="model">hr.leave.approval.wizard</field>
        <field name="arch" type="xml">
            <form string="Approve Leave">
                <group>
                    <field name="leave_id" invisible="1"/>
                    <field name="comment" placeholder="Optional comment for this approval..."/>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="Approve" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>