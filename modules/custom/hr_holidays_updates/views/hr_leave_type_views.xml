<odoo>

    <record id="view_hr_leave_type_form_multi_level" model="ir.ui.view">
        <field name="name">hr.leave.type.form.multi.level</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>

        <field name="arch" type="xml">

            <xpath expr="//sheet" position="inside">
                <notebook invisible="leave_validation_type != 'multi'">
                    <page string="Leave Validation">

                        <field name="validator_ids">
                            <list editable="bottom">
                                <field name="sequence"/>
                                <field name="user_id"/>
                                <field name="sequence_type" required="1"/>
                                <!-- <field name="action_type"/> -->
                            </list>
                        </field>

                    </page>
                </notebook>
            </xpath>

        </field>
    </record>

</odoo>
