<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
      Align Allocation Requests "default state" with Leave Requests:
      show "Awaiting" by default (confirm + validate1) instead of only confirm.
    -->
    <record id="hr_holidays.hr_leave_allocation_action" model="ir.actions.act_window">
        <field name="domain">[('state', 'in', ('confirm', 'validate1'))]</field>
    </record>
</odoo>

