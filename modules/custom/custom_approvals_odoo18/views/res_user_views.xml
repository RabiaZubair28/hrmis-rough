<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Inherit the Existing User Form -->
    <record id="view_res_users_form_custom" model="ir.ui.view">
        <field name="name">res.users.form.custom.fields</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
 
            <!-- ğŸ”¥ THIS is the real label -->
            <xpath expr="//label[@for='login']" position="attributes">
                <attribute name="string">Username</attribute>
            </xpath>
 
            <!-- HRMIS fields after login -->
            <xpath expr="//field[@name='login']" position="after">
                <group string="HRMIS User Details">
                    <field name="cnic"/>
                    <field name="cadre"/>
                    <field name="manager_id"/>
                    <field name="hrmis_role"/>
                    <field name="temp_password"/>
                    <field name="is_temp_password"/>
                    <field name="onboarding_state" readonly="1"/>
                </group>


            </xpath>

        </field>
    </record>

</odoo>
