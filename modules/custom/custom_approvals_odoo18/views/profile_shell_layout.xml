<odoo>
    <template id="profile_shell_layout">
    
        <html>
            <head>
                <meta charset="utf-8"/>
                <meta name="viewport" content="width=device-width, initial-scale=1"/>
                <!-- <link rel="stylesheet/scss" href="/custom_website/static/src/scss/variables.scss"/> -->
                <!-- <link rel="stylesheet" type="text/css" href="/custom_website/static/src/css/hrmis_theme.css"/> -->

                <!-- Load Odoo core assets only -->
                <t t-call-assets="web.assets_frontend"/>
            </head>
            
                <!-- ================= HEADER ================= -->
                <header class="d-flex justify-content-between align-items-center px-4 py-3">
                    <div class="d-flex justify-content-center">
                        <img src="/custom_website/static/src/img/logo.png"
                             alt="HRMIS Logo" style="height: 70px;"/>
                    </div>
                    <t t-if="request.session.uid">
                        <a href="/web/session/logout"
                           class="btn btn-outline-danger btn-sm"
                           style="font-weight: 600; border-radius: 8px;">
                            Logout
                        </a>
                    </t>
                </header>
            <body class="bg-light" style="padding-top: 80px; padding-bottom: 60px;">
                <t t-out="0"/>
            </body>
                <!-- ================= FOOTER ================= -->
                <footer class="text-center py-2"
                        style="background: #f8f9fa; border-top: 1px solid #e5e7eb; 
                               position: fixed; bottom: 0; width: 100%; height: 50px;">
                    <small style="color: #6b7280;">© 2025 Sindh Health Department — HRMIS. All rights reserved.</small>
                </footer>
        </html>
    </template>
</odoo>
