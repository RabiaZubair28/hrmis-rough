<odoo>
    <template id="approvals_dashboard">
        <t t-call="website.layout">
            <div class="container mt-4">

                <h3 class="mb-4">Approvals</h3>

                <!-- Tabs -->
                <ul class="nav nav-tabs mb-3" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active"
                                data-bs-toggle="tab"
                                data-bs-target="#new_request"
                                type="button"
                                role="tab">
                            New Request
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link"
                                data-bs-toggle="tab"
                                data-bs-target="#history"
                                type="button"
                                role="tab">
                            Request History
                        </button>
                    </li>
                </ul>

                <div class="tab-content border rounded p-3 bg-white">

                    <!-- NEW REQUEST TAB -->
                    <div class="tab-pane fade show active" id="new_request" role="tabpanel">
                        <t t-call="custom_approvals_odoo18.new_request_form"/>
                    </div>

                    <!-- HISTORY TAB -->
                    <div class="tab-pane fade" id="history" role="tabpanel">
                        <t t-call="custom_approvals_odoo18.request_history"/>
                    </div>

                </div>

            </div>
        </t>
    </template>
</odoo>
