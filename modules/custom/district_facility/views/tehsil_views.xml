<odoo>
    <!-- ========== LIST VIEW ========== -->
    <record id="view_tehsil_list" model="ir.ui.view">
        <field name="name">tehsil.list</field>
        <field name="model">x_tehsil.master</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="district_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- ========== FORM VIEW ========== -->
    <record id="view_tehsil_form" model="ir.ui.view">
        <field name="name">tehsil.form</field>
        <field name="model">x_tehsil.master</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="district_id"/>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="active"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ========== ACTION ========== -->
    <record id="action_tehsils" model="ir.actions.act_window">
        <field name="name">Tehsils</field>
        <field name="res_model">x_tehsil.master</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_tehsil_list"/>
    </record>

    <!-- ========== MENU ITEMS ========== -->
    <menuitem id="menu_district_root" name="District Setup" parent="hr.menu_hr_root"/>
    <menuitem id="menu_tehsil" name="Tehsils" parent="menu_district_root" action="action_tehsils"/>
</odoo>
