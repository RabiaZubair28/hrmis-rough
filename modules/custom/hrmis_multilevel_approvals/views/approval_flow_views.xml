<odoo>
    <!-- Approval Flow Form -->
    <record id="view_hr_leave_approval_flow_form" model="ir.ui.view">
        <field name="name">hr.leave.approval.flow.form</field>
        <field name="model">hr.leave.approval.flow</field>
        <field name="arch" type="xml">
            <form string="Approval Flow">
                <sheet>
                    <group>
                        <field name="leave_type_id"/>
                        <field name="sequence"/>
                        <field name="mode"/>
                        <field name="sequence_type"/>
                        <field name="approver_ids" widget="many2many_tags"/>
                    </group>

                    <notebook>
                        <page string="Approver Lines">
                            <field name="approver_line_ids">
                                <list editable="bottom">
                                    <field name="user_id"/>
                                    <field name="sequence"/>
                                    <field name="sequence_type"/>
                                    <field name="bps_from"/>
                                    <field name="bps_to"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Approval Flow list -->
    <record id="view_hr_leave_approval_flow_list" model="ir.ui.view">
        <field name="name">hr.leave.approval.flow.list</field>
        <field name="model">hr.leave.approval.flow</field>
        <field name="arch" type="xml">
            <list string="Approval Flows">
                <field name="leave_type_id"/>
                <field name="sequence"/>
                <field name="mode"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hr_leave_approval_flow" model="ir.actions.act_window">
        <field name="name">Approval Flows</field>
        <field name="res_model">hr.leave.approval.flow</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_hr_approval_flows_root" name="Approval Management" parent="hr.menu_hr_root"/>
    <menuitem id="menu_hr_approval_flows" name="Approval Flows" 
              parent="menu_hr_approval_flows_root" action="action_hr_leave_approval_flow"/>
</odoo>
