<odoo>
    <!-- Approval Status list -->
    <record id="view_hr_leave_approval_status_list" model="ir.ui.view">
        <field name="name">hr.leave.approval.status.list</field>
        <field name="model">hr.leave.approval.status</field>
        <field name="arch" type="xml">
            <list string="Approval Statuses">
                <field name="leave_id"/>
                <field name="flow_id"/>
                <field name="user_id"/>
                <field name="sequence"/>
                <field name="sequence_type"/>
                <field name="approved"/>
                <field name="approved_on"/>
                <field name="comment"/>
                <field name="commented_on"/>
            </list>
        </field>
    </record>

    <!-- Approval Status Form -->
    <record id="view_hr_leave_approval_status_form" model="ir.ui.view">
        <field name="name">hr.leave.approval.status.form</field>
        <field name="model">hr.leave.approval.status</field>
        <field name="arch" type="xml">
            <form string="Approval Status">
                <sheet>
                    <group>
                        <field name="leave_id"/>
                        <field name="flow_id"/>
                        <field name="user_id"/>
                        <field name="sequence"/>
                        <field name="sequence_type"/>
                        <field name="bps_from"/>
                        <field name="bps_to"/>
                        <field name="approved"/>
                        <field name="approved_on"/>
                        <field name="comment"/>
                        <field name="commented_on"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hr_leave_approval_status" model="ir.actions.act_window">
        <field name="name">Approval Statuses</field>
        <field name="res_model">hr.leave.approval.status</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_hr_approval_statuses" name="Approval Statuses" 
              parent="menu_hr_approval_flows_root" action="action_hr_leave_approval_status"/>
</odoo>
