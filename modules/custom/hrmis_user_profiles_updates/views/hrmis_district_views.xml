<odoo>
    <record id="view_district_list" model="ir.ui.view">
    <field name="name">district.list</field>
    <field name="model">hrmis.district.master</field>
    <field name="arch" type="xml">
        <list>
            <field name="name"/>
            <field name="code"/>
            <field name="region"/>
            <field name="active"/>
        </list>
    </field>
</record>

<record id="view_district_form" model="ir.ui.view">
    <field name="name">district.form</field>
    <field name="model">hrmis.district.master</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="region"/>
                    <field name="active"/>
                    <field name="note"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="action_districts" model="ir.actions.act_window">
    <field name="name">Districts</field>
    <field name="res_model">hrmis.district.master</field>
    <field name="view_mode">list,form</field>
    <field name="view_id" ref="view_district_list"/>
</record>

    <menuitem id="menu_district_root" name="District Setup" parent="hr.menu_hr_root" />
    <menuitem id="menu_district" name="Districts" parent="menu_district_root" action="action_districts" />
</odoo>
