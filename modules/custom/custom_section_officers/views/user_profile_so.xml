<odoo>
    <template id="custom_profile_patch"
              inherit_id="hr_holidays_updates.hrmis_staff_profile">

        <!-- ❌ Remove Facility only for Section Officer -->
        <xpath expr="//div[@id='hrmis_user_profile_block']//div[contains(@class,'hrmis-kv__item')][.//div[contains(@class,'hrmis-kv__k') and contains(.,'Facility')]]" position="replace">
            <t t-if="not request.env.user.has_group('custom_login.group_section_officer')">
                <div class="hrmis-kv__item">
                    <div class="hrmis-kv__k">Facility</div>
                    <div class="hrmis-kv__v">
                        <t t-esc="(('facility_id' in employee._fields and employee.facility_id and employee.facility_id.name) or ('hrmis_facility_id' in employee._fields and employee.hrmis_facility_id and employee.hrmis_facility_id.name) or '')"/>
                    </div>
                </div>
            </t>
        </xpath>

        <!-- ❌ Remove District only for Section Officer -->
        <xpath expr="//div[@id='hrmis_user_profile_block']//div[contains(@class,'hrmis-kv__item')][.//div[contains(@class,'hrmis-kv__k') and contains(.,'District')]]" position="replace">
            <t t-if="not request.env.user.has_group('custom_login.group_section_officer')">
                <div class="hrmis-kv__item">
                    <div class="hrmis-kv__k">District</div>
                    <div class="hrmis-kv__v">
                        <t t-esc="(('district_id' in employee._fields and employee.district_id and employee.district_id.name) or ('hrmis_district_id' in employee._fields and employee.hrmis_district_id and employee.hrmis_district_id.name) or '')"/>
                    </div>
                </div>
            </t>
        </xpath>

        <!-- ❌ Remove Designation only for Section Officer -->
        <xpath expr="//div[@id='hrmis_user_profile_block']//div[contains(@class,'hrmis-kv__item')][.//div[contains(@class,'hrmis-kv__k') and contains(.,'Designation')]]" position="replace">
            <t t-if="not request.env.user.has_group('custom_login.group_section_officer')">
                <div class="hrmis-kv__item">
                    <div class="hrmis-kv__k">Designation</div>
                    <div class="hrmis-kv__v">
                        <t t-esc="('hrmis_designation' in employee._fields and employee.hrmis_designation) or (employee.job_id and employee.job_id.name) or ''"/>
                    </div>
                </div>
            </t>
        </xpath>

        <!-- ✏ Add Section only for Section Officer after Joining Date -->
        <xpath expr="//div[@id='hrmis_user_profile_block']//div[contains(@class,'hrmis-kv__item')][.//div[contains(@class,'hrmis-kv__k') and contains(.,'Joining Date')]]" position="after">
            <t t-if="request.env.user.has_group('custom_login.group_section_officer')">
                <div class="hrmis-kv__item">
                    <div class="hrmis-kv__k">Section</div>
                    <div class="hrmis-kv__v">
                        <t t-esc="('section_id' in employee._fields and employee.section_id and employee.section_id.name) or ''"/>
                    </div>
                </div>
            </t>
        </xpath>

    </template>
</odoo>
